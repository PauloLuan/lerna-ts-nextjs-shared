{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "composite": true,
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["../../node_modules/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/__mocks__*",
    "**/__test__*",
    "**/*.spec.**",
    "**/*.test.**",
    "test",
    "assets"
  ]
}
